package tests;
import java.util.*;

public class shams {
	static int count =0;
	public static int path(int que,int c1, int c2, int count)
	{
		if((c1+c2)==que)
		{
			count=count+1;
			return count;
		}
		if(c1>que || c2>que)
			return 1;
		if((c1+c2)>que)
			return 1;
		path(que,c1+1,c2,count);
		path(que,c1,c2+2,count);
		return 1;
	}
	public static void main(String[] args) {
		Scanner sc= new Scanner(System.in);
		int que= sc.nextInt();
		int c1=0,c2=0;
		int ans = path(que,c1,c2,count);
		System.out.println(ans);
	}
}

	public static void substring(String inp,String ans,ArrayList<String> fin) {
		// TODO Auto-generated method stub
		if(inp.length()==0) {
			checkforpali(ans);
			if(checkforpali(ans)) {
				fin.add(ans);
			}
			return;
		}
		char ch = inp.charAt(0);
		String left = inp.substring(1);
		substring(left, ans, fin);
		substring(left, ans+ch, fin);
	}
	public static boolean checkforpali(String ans) {
		// TODO Auto-generated method stub
		int l=0,r=ans.length()-1;
		if(ans.length()==0 || ans.length()==1)
			return true;
		while(l<r) {
			char ch = ans.charAt(l);
			char ch1 = ans.charAt(r);
			if(ch!=ch1) {
				return false;
			}
			l++;
			r--;
		}
		return true;
	}
}

package random;

import java.util.Scanner;

public class Radom {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int n = sc.nextInt();
		int nst=1,nsp=n/2;
		for(int i=0;i<n;i++)
		{
			for(int j=0;j<nsp;j++)
				System.out.print(" ");
			if(i<n/2)
				nsp--;
			else
				nsp++;
			for(int k=0;k<nst;k++)
				System.out.print("*");
			if(i<n/2)
				nst+=2;
			else
				nst-=2;
				
			System.out.println();
		}
			
	}

}
